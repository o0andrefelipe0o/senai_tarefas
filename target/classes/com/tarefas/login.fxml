<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<Scene xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
    <AnchorPane prefHeight="400" prefWidth="600" style="-fx-background-color: #ffffff;">
        <children>
            <ImageView fitHeight="60" fitWidth="225" layoutX="20" layoutY="20">
                <image><Image url="@imagens/SENAI_logo_2024.png" /></image>
            </ImageView>

            <Label alignment="CENTER" layoutX="0" layoutY="90" prefWidth="600" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Login" />

            <TextField fx:id="txtEmail" layoutX="200" layoutY="140" prefWidth="200" promptText="Email" style="-fx-font-size: 14px;" />
            <PasswordField fx:id="txtSenha" layoutX="200" layoutY="185" prefWidth="200" promptText="Senha" style="-fx-font-size: 14px;" />

            <Button layoutX="240.0" layoutY="225.0" onAction="#handleLogin" prefWidth="120" style="-fx-font-size: 14px;" text="Logar" />

            <Button layoutX="240.0" layoutY="265.0" onAction="#handleAbrirCadastro" prefWidth="120" style="-fx-font-size: 14px;" text="Cadastrar" />
        </children>
    </AnchorPane>
</Scene>
